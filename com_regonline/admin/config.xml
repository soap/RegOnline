<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<config>
	<fieldset
		name="general"
		label="COM_REGONLINE_CONFIG_GENERAL_LABEL"
		description="COM_REGONLINE_CONFIG_GENERAL_DESC"
		>
		<field 
			name="show_past_schedules"
			type="radio"
			label="COM_REGONLINE_CONFIG_SHOW_PAST_SCHEDULES_LABEL"
			description="COM_REGONLINE_CONFIG_SHOW_PAST_SCHEDULES_DESC"
			default="0">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</field>
		<field
			name="date_format"
			type="text"
			default="Y-m-d"
			label="COM_REGONLINE_CONFIG_DATE_FORMAT_LABEL"
			description="COM_REGONLINE_CONFIG_DATE_FORMAT_DESC" />
	</fieldset>
	
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			filter="rules"
			component="com_regonline"
			section="component" />
	</fieldset>
</config>